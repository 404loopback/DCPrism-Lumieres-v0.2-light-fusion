# OpenTofu CLI Configuration File
# This file is used to configure the OpenTofu CLI behavior

# Plugin cache directory to improve performance
plugin_cache_dir = "/home/opentofu/.terraform.d/plugin-cache"

# Disable upgrade and security check notifications
disable_checkpoint = true

# Logging configuration (can be overridden by TF_LOG env var)
# log_level = "INFO"
# log_path = "/workspace/logs/tofu.log"

# Provider installation configuration
provider_installation {
  # Use the plugin cache
  filesystem_mirror {
    path    = "/home/opentofu/.terraform.d/plugin-cache"
    include = ["*/*/*"]
  }
  
  # Fall back to direct installation from registry
  direct {
    exclude = []
  }
}
