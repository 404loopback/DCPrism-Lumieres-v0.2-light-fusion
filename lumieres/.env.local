# =====================================
# Lumières - Environment Template
# Copy this file to .env and configure
# =====================================

# Application Environment
APP_ENV=local
APP_DEBUG=true
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mariadb
DB_HOST=mariadb
DB_PORT=3306
DB_DATABASE=dichroic
DB_USERNAME=dichroic
DB_PASSWORD=dichroic_password
DB_ROOT_PASSWORD=dcprism_root_password

# Fresnel Application Database
FRESNEL_DB_DATABASE=fresnel
FRESNEL_DB_USERNAME=fresnel
FRESNEL_DB_PASSWORD=fresnel_password

# Meniscus Application Database
MENISCUS_DB_DATABASE=dichroic
MENISCUS_DB_USERNAME=dichroic
MENISCUS_DB_PASSWORD=dichroic_password

# Cache & Session
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null

# Application Ports
FRESNEL_PORT=8001
MENISCUS_PORT=8000
VITE_FRESNEL_PORT=5173
VITE_MENISCUS_PORT=5174

# Development Tools (set to false for production)
TELESCOPE_ENABLED=true
DEBUGBAR_ENABLED=true

# Docker Configuration
WWWUSER=1000
WWWGROUP=1000

# Asset Building
VITE_APP_NAME="Lumières"

# URLs
FRESNEL_URL=http://localhost:8001
MENISCUS_URL=http://localhost:8000

# Optional: Monitoring & Logging
SENTRY_LARAVEL_DSN=
LOG_SLACK_WEBHOOK_URL=
