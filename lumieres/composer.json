{
    "name": "dcprism/lumieres",
    "description": "Lumi√®res - Digital Cinema and Event Management Monorepo",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "DCPrism Team",
            "email": "dev@dcprism.be"
        }
    ],
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "laravel/pint": "^1.0",
        "larastan/larastan": "^2.0",
        "pestphp/pest": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Lumieres\\Shared\\Services\\": "packages/shared-services/src/",
            "Lumieres\\Shared\\Models\\": "packages/shared-models/src/",
            "Lumieres\\DCPrism\\": "apps/dcprism-unified/app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Lumieres\\DCPrism\\Tests\\": "apps/dcprism-unified/tests/"
        }
    },
    "scripts": {
        "test": [
            "@test:unit",
            "@test:integration"
        ],
        "test:unit": "pest --parallel",
        "test:integration": "pest tests/integration --parallel",
        "test:dcprism": "pest apps/dcprism-unified/tests --parallel",
        "lint": "pint",
        "analyse": "phpstan analyse",
        "build": [
            "@composer install --optimize-autoloader --no-dev",
            "@lint",
            "@analyse"
        ],
        "dev": [
            "@composer install",
            "@test"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
